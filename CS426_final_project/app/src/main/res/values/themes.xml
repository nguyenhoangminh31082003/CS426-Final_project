<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CS426_final_project" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/medium_grey</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/default_text_color</item>
        <item name="colorOnSurface">@android:color/holo_orange_light</item>

    </style>

    <style name="Theme.CS426_final_project_AppCompat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/medium_grey</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/default_text_color</item>
        <item name="colorOnSurface">@android:color/holo_orange_light</item>
    </style>

    <style name="Theme.CS426Final_project.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.CS426Final_project.AppWidgetContainer" parent="Theme.CS426Final_project.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
  <!-- Base application theme. -->
    <style name="Base.Theme.CS426_final_project" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
</resources>