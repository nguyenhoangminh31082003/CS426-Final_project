<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey"
    android:padding="12dp"
    android:orientation="vertical"
    tools:context=".fragments.search.SearchResultFragment">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id = "@+id/back_button_in_result_page"
            android:src = "@drawable/back_button_square"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        </ImageView>

        <TextView
            tools:ignore="HardcodedText"
            android:id = "@+id/header_of_search_result"
            android:text = "Result for Tiramisu"
            android:textSize="20sp"
            android:textColor = "@color/white"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:padding="8dp"
            android:gravity="left">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            tools:ignore="HardcodedText"
            android:text = "Sort by: "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor = "@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            tools:ignore="HardcodedText"
            android:text = "Near by"
            android:id="@+id/filter_mode_in_search_result"
            android:textSize="20sp"
            android:textColor = "@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id = "@+id/list_of_foods_in_search_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>