<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivPreviewImageFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="preview image"
        android:foreground="@drawable/clipping_image_mask"
        android:scaleType="fitXY"
        android:src="@drawable/food_comment_page_demo_food_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtUsernameFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ms. Bean"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPreviewImageFeed"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/ibCheckFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="?selectableItemBackgroundBorderless"
        android:contentDescription="food icon"
        android:src="@drawable/food_icon"
        app:layout_constraintBottom_toBottomOf="@+id/ivPreviewImageFeed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPreviewImageFeed"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/txtDateFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dec 12, 2179"

        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUsernameFeed"
        android:paddingBottom="16dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtCommentFeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Have a great weekend with him. Delicious food, romantic atmosphere. The best weekend of my life"

        android:textSize="20sp"
        android:textStyle="italic"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDateFeed"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>