<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="60dp"
    app:cardBackgroundColor="@color/light_grey"
    android:layout_margin="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src = "@drawable/review_page_default_food_image"
            android:id = "@+id/demo_image_of_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id = "@+id/food_name"
                android:padding="12dp"
                android:textSize="28sp"
                android:textColor="@color/white"
                android:text="Tiramisu"
                android:textStyle="bold"
                android:ellipsize="end"
                android:singleLine="true"
                android:gravity="center_vertical|left"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </TextView>

            <TextView
                android:id = "@+id/a_random_food_review"
                android:padding="12dp"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="This is the best dessert that I have ever eaten in my life. You will absolutely regret if you do not try this!!!"
                android:ellipsize="end"
                android:singleLine="true"
                android:gravity="center_vertical|left"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </TextView>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>